<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>
      <% if defined? @title %>
        <%= @title %> | White Rabbit
      <% else %>
        White Rabbit
      <% end %>
    </title>
    <link rel="stylesheet" type="text/css" href="/assets/css/semantic.min.css" />
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css" />
    <script src="/assets/js/jquery-1.11.3.min.js"></script>
    <script src="/assets/js/semantic.min.js"></script>
  </head>
  <body>
    <div class="ui grid container">

      <div class="three wide column right aligned">
        <a href="/">
          <img src="/assets/images/white_rabbit.jpg" width="150" />
        </a>
      </div>
      <div class="ui middle aligned thirteen wide column">
        <h1 class="ui header content">
          White Rabbit
          <div class="sub header">
            Never be late for <em>any</em> important date.
          </div>
        </h1>
      </div>

      <div class="three wide column">
        <nav id="navMenu" class="ui vertical pointing fluid secondary menu right">
          <% @lists.reject(&:new_record?).each do |list| %>
            <a class="item<%= ' active' if list.id == @list.try(:id) %>" href="/list/<%= list.id %>">
              <%= list.name %>
              <i class="chevron right icon"></i>
            </a>            
          <% end %>
          <a class="item<%= ' active' if request.path_info == '/list/new' %>" href="/list/new"> 
            Add List
            <i class="add icon"></i>
          </a>
        </nav>
      </div>
      <div class="thirteen wide column">
        <div id="content">
          <div class="ui segment">
            <%= yield %>
          </div>
        </div>
      </div>

    </div>
  </body>
</html>
