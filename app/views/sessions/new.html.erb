<h1 id="log_in">Log In</h1>

<p id="notice"><%= notice %></p>

<%= form_tag "/login", class: "ui large form" do %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="action">
    <%= submit_tag 'Log in', class: "ui fluid large submit button large" %>
  </div>
<% end %>