<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<style type="text/css">
td
{
    padding:0 15px 0 15px;
}
</style>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.title, [list.user, list] %></td>
        <td><%= list.description %></td>
        <% if list.user == current_user %>
          <td><%= link_to 'Edit', edit_user_list_path(list.user, list) %></td>
          <td><%= link_to 'Delete', [list.user, list], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? %>
  <%= link_to 'New List', new_user_list_path(current_user) %>
<% end %>